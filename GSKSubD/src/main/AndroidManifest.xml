            android:name=".dailyentry.PosmEntryActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/title_activity_posm_entry"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyentry.SecondaryWindowActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/title_activity_secondary_window"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyentry.StoreImageActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".upload.UploadDataActivity" />
        <activity android:name=".dailyentry.StoreListActivity" />
        <activity
            android:name=".dailyentry.CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".autoUpdate.AutoUpdateActivity" />
        <activity
            android:name=".dailyentry.MyAttendanceActivity"
            android:label="Attendance"
            android:theme="@style/AppTheme.NoActionBar"></activity>
