        <activity
            android:name=".dailyentry.AddNewStoreListActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Add Store"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyentry.NonWorkingReason"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Add Store"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyentry.AddNewStoreActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Add HoReCa Store"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyentry.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dailyentry.LineEntryActivity"
            android:label="@string/title_activity_line_entry"
            android:theme="@style/AppTheme.NoActionBar" />
